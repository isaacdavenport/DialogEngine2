<UserControl x:Class="DialogGenerator.UI.Views.DialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:eventArgs="clr-namespace:DialogGenerator.Events.EventArgs;assembly=DialogGenerator.Events"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"            
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:converters="clr-namespace:DialogGenerator.UI.Converters"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:views="clr-namespace:DialogGenerator.UI.Views"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal" 
             TextOptions.TextRenderingMode="Auto"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ImageToFullPathValueConverter x:Key="ImageToFullPathValueConverter" />
            <converters:IsDialogBtnVisibleValueConverter x:Key="IsDialogBtnVisibleValueConverter" />
            <converters:DivideBy2ValueConverter x:Key="DivideBy2ValueConverter" />
            <converters:InvertVisibilityValueConverter x:Key="InvertVisibilityValueConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60" />
        </Grid.RowDefinitions> 

        <ItemsControl   x:Name="TextOutput"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" 
                        HorizontalContentAlignment="Stretch"  
                        SnapsToDevicePixels="True"
                        Grid.Row="0"
                        Margin="0"
                        Padding="0,20,0,20"
                        Background="White"
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding DialogLinesCollection}">
            
            <ItemsControl.Resources>
                <DataTemplate DataType="{x:Type eventArgs:NewDialogLineEventArgs }">
                    <DockPanel HorizontalAlignment="Left" Margin="50,10,20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Ellipse Height="40" Stroke="LightGray" VerticalAlignment="Top" Margin="0,10,0,0" Width="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Character.CharacterImage,Converter={StaticResource ImageToFullPathValueConverter}}" />
                                </Ellipse.Fill>
                            </Ellipse>                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Padding="8,10,4,4" TextWrapping="Wrap" FontWeight="Bold"
                                           Text="{Binding Character.CharacterName }" Width="auto" HorizontalAlignment="Left"  />
                                <TextBlock Padding="8,4,4,4" TextWrapping="Wrap" Text="{Binding Path=DialogLine }" Width="auto" HorizontalAlignment="Left"  />
                            </StackPanel>
                        </Grid>
                    </DockPanel>
                </DataTemplate>

                <DataTemplate DataType="{x:Type s:String}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Line Stroke="LightGray" Stretch="Fill" X2="1" />
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" Grid.Column="1" />
                        <Line Stroke="LightGray" Grid.Column="2" Stretch="Fill" X2="1" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.Resources>

            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="ScrollViewerMessages">
                        <ItemsPresenter SnapsToDevicePixels="True" />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ContextMenu>
                <ContextMenu Background="White">
                    <MenuItem Header="Clear All" FontSize="13" Command="{Binding ClearAllMessagesCommand}"   Background="White" >
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="DeleteEmpty" Foreground="Red" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ItemsControl.ContextMenu>

        </ItemsControl>

        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Visibility="{Binding IsDebugViewVisible}" Height="10"  VerticalAlignment="Center" >
            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid>
                        <Label Content="..." Height="10" Foreground="Red"/>
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>
        </GridSplitter>

        <Border Grid.Row="2" BorderBrush="LightGray" HorizontalAlignment="Stretch" 
                Visibility="{Binding IsDebugViewVisible}" VerticalAlignment="Stretch" BorderThickness="0,1,0,0" >
            <views:DebugView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Border>

        <Border  Grid.Row="3"  Background="White" Height="60" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Command="{Binding ConfigureDialogCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" />
                                <Label Content="Configure" VerticalAlignment="Center" Padding="0" Margin="4,0,0,0" Foreground="White" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Visibility="{Binding IsDialogStarted, Converter={StaticResource IsDialogBtnVisibleValueConverter},ConverterParameter=StartDialog}" 
                            Command="{Binding StartDialogCommand}" Margin="20,0,0,0"  VerticalAlignment="Center" Content="Start dialog" x:Name="StartDialogBtn"/>
                    <Button Content="Stop dialog" Visibility="{Binding IsDialogStarted,Converter={StaticResource IsDialogBtnVisibleValueConverter},ConverterParameter=StopDialog}" 
                            IsEnabled="{Binding IsStopBtnEnabled}" Command="{Binding StopDialogCommand}"  Margin="20,0,0,0" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0" HorizontalAlignment="Right">
                    <Button HorizontalAlignment="Right" Command="{Binding ChangeDebugVisibilityCommand}" CommandParameter="{Binding  ElementName=TextOutput}"
                            Visibility="{Binding IsDebugViewVisible, Converter={StaticResource InvertVisibilityValueConverter}}" 
                            Content="Show debug view" Background="DarkGray" BorderBrush="DarkGray" Foreground="{DynamicResource MaterialDesignBody}" Margin="0,0,10,0" Padding="5">
                    </Button>
                    <Button Content="Hide debug view" Visibility="{Binding IsDebugViewVisible}" Command="{Binding ChangeDebugVisibilityCommand}"
                            CommandParameter="{Binding ElementName=TextOutput}"
                            BorderBrush="DarkGray" Background="DarkGray" Foreground="{DynamicResource MaterialDesignBody}" Margin="0,0,10,0" Padding="5" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
